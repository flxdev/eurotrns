block content
	+headtwo('Автопарк')
	.wrapper
		.box
			.aside-wrapp
				aside.aside-menu(data-sticky_parent)
					.aside-stick(data-sticky_column)
						//.bold
						// .active для ссылки текущей страницы
						.aside-list.bold
							a(href="#").aside-list-item.text-1.active
								span Автопарк
							a(href="#").aside-list-item.text-1
								span Вопрос/ответ
							a(href="#").aside-list-item.text-1
