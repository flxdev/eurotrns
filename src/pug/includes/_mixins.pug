//-footer mixins
mixin footerb(text)
	li.footer-column-list-item
		a(href="#") #{text}
mixin payimg(img)
	.footer-row-pay-item
		img(src="img/pay/"+img+".png", alt="vissssss")
//- header mixins

//- main-mixins
mixin Infoblock(head)
	.info-block
		.info-block-head #{head}
		ul.info-block-list
			if block
				block
mixin smallCard(cls,img,way, val1,val2,price)
	.card-item(class=cls)
		a(href="#").card-item-inner
			.card-item-img
				.card-item-img-inner(style='background-image:url(img/tour/'+img+'.png)')
			.card-item-content
				if way = 1
					.text-sm Туда и обратно
				else
					.text-sm В одну сторону
				.card-item-value
					.card-item-name.text-bold
						span #{val1}
						span #{val2}
					.card-item-price.text-bold
						|#{price}
						span byn 
				i.card-item-link
					svg(class="icon icon-drop")
						use(xlink:href="#arr-circle" xmlns:xlink="http://www.w3.org/1999/xlink")
mixin news(type,vid,vidcls,date,name,text)
	article.news-item(class=type)
		a(href="#").news-item-inner
			if type == 'big'
				.news-item-img
					.card-item-img-inner(style='background-image:url(img/news1.jpg)')
				.news-item-content
					//либо .promo либо .news
					.small-block(class=vidcls)
						span #{vid}
					.news-item-content-inner
						time.text-sm #{date}
						.news-item-name #{name}
						.text-2 #{text}
			else
				.news-item-content
					.small-block(class=vidcls)
						span #{vid}
					.news-item-content-inner
						time.text-sm #{date}
						.news-item-name #{name}
						.text-2 #{text}			